<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cream"
    android:gravity="center_horizontal">

    <!-- Global Palestine Support Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/global_palestine_logo" />

    <!-- Lock Icon -->

    <!-- Title Text -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/lock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/regular_font"
        android:layout_marginBottom="8dp"/>

    <!-- Instruction Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provide your account’s email for which you want to reset your password!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:fontFamily="@font/regular_font"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert your email here"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:fontFamily="@font/regular_font"
        android:layout_marginBottom="24dp"/>

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_green"
        android:fontFamily="@font/regular_font"
        android:layout_marginBottom="32dp"/>

    <!-- Back Navigation -->

    <!-- Child Holding Flag Logo -->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:src="@drawable/flag"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="←BACK"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:fontFamily="@font/regular_font"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"/>

</LinearLayout>
